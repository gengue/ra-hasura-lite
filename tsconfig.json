{
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/__tests__"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "commonjs",
    "target": "ESNext",
    "allowJs": false,

    "useDefineForClassFields": true,
    "rootDir": "./",
    "outDir": "build",
    "noImplicitAny": false,

    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true
  }
}
